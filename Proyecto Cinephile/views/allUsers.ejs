<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Cinephiles - Usuarios</title>
    <link rel="stylesheet" href="/stylesheets/allUsers.css" />
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('navbar') %>
    <div class="container">
      <div class="row cardrow">
        <div class="col-12"><h1 class="h1sh">Listado de usuarios</h1></div>
        <% result.forEach (user => { %>
        <div class="card col-12 col-sm-4">
          
          <div class="headCard">
            <div class="headText">
              <h4><%= user.user_name %></h4>
              <h6><%= user.user_last_name %></h6>
              
            </div>
            <a href="/user/oneUser/<%= user.user_id %>" class="text-end"
              ><button class="buttonSMore">Ver mas</button></a
            >
          </div>

          <img src="/images/user/<%= user.user_img %>" alt="" />
        
        </div>
        <% }) %>
      </div>
    </div>
    <%- include('footer') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
