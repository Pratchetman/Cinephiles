<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Cinephiles - Home</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('navbar') %>
    <div class="container">
      <div class="row rowmain">
        <div class="col-12 col-lg-9 colbig">
          <div class="bigCard">
            <div class="bigTitle">
              <h1>Welcome to Cinephiles!</h1>
            <p>Built your own collection.</p>
            </div>
            <div id="carouselExample" class="carousel slide carro" data-bs-ride="carousel" data-bs-interval="10000">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <img src="/images/cine-clasico.jpeg" class="d-block godfather" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="/images/triptomoon.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="/images/vidaesbella.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="/images/psicosis.jpg" class="d-block godfather" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="/images/schindler.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="/images/bienvenido.jpg" class="d-block godfather" alt="...">
                </div>
                <div class="carousel-item">
                  <img src="/images/toy.jpeg" class="d-block godfather" alt="...">
                </div>
              </div>
             
            </div>
          </div>
          
        </div>
        <div class="col-12 col-lg-3 colsmall">
          <div class="smallCard">
            <h5>¡Último usuario registrado!</h5>
            <h5>¡Bienvenido!</h5>
            <% resultUser.forEach (user => { %>
              <a href="/user/oneUser/<%= user.user_id %>">
                <div class="headFilms">
                  <p><%= user.user_name %></p>
                  <p class="text-start"><%= user.user_last_name %></p>
                </div>
               
                <img class="lastUser" src="/images/user/<%= user.user_img %>" alt="" />
              </a>
              
              
              <% }) %>
          </div>
        </div>
      </div>
      <hr>
      <div class="row cardrow">
        <div class="col-12"><h5>Últimas películas registradas</h5>
        </div>
      <div class="row smCardrow">
        <% resultMovie.forEach (movie => { %>
        
          <div class="card col-12 col-sm-2">
            
             <div class="headFilms">
              <p><%= movie.title %></p>
              <p class="text-start"><%= movie.release_year %></p>
            </div>
            
           
            <a href="/movies/oneMovie/<%= movie.movie_id %>">
            <img class="cardImg" src="/images/movies/<%= movie.movie_img %>" alt="" />
            </a>
          </div>
       
        
        <% }) %>
      </div>        
      </div>
    </div>
    <%- include('footer') %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
